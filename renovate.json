{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:recommended"],
  "dependencyDashboard": true,
  "enabledManagers": ["github-actions", "regex"],
  "customManagers": [
    {
      "customType": "regex",
      "fileMatch": ["^netdata/Dockerfile$", "^netdata/config.yaml$", "^netdata/CHANGELOG.md$"],
      "matchStrings": [
        "FROM ghcr.io/netdata/netdata:v(?<currentValue>.+)\\n",
        "version: (?<currentValue>.+)\\n",
        "## (?<currentValue>.+)\\n",
        "- Update Netdata to (?<currentValue>.+)\\n",
        "  - [Read the release notes]\\(https://github.com/netdata/netdata/releases/tag/v(?<currentValue>.+)\\)\\n"
      ],
      "datasourceTemplate": "github-releases",
      "packageNameTemplate": "netdata/netdata",
      "depNameTemplate": "Netdata",
      "extractVersionTemplate": "^v(?<version>.+)$",
      "versioningTemplate": "semver"
    }
  ],
  "packageRules": [
    {
      "description": "Automerge non-major updates",
      "matchUpdateTypes": ["minor", "patch"],
      "automerge": true
    }
  ]
}
